{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat"]
  },
  "include": [
    "deploy/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts"
  ]
}


